<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChainActivity">

    <Button

        android:id="@+id/btn1"
        style="@style/btnStyle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="btn1"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn2"
        style="@style/btnStyle"
        android:layout_marginStart="8dp"
        android:text="btn2"
        app:layout_constraintBottom_toBottomOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        style="@style/btnStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="btn3"
        app:layout_constraintBottom_toBottomOf="@+id/btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn2" />

    <Button
        android:id="@+id/btn4"
        style="@style/btnStyle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:text="btn4"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn5"
        style="@style/btnStyle"
        android:layout_marginStart="8dp"
        android:text="btn5"
        app:layout_constraintBottom_toBottomOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toTopOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        style="@style/btnStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="btn6"
        app:layout_constraintBottom_toBottomOf="@+id/btn5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toTopOf="@+id/btn5" />


    <Button
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/btn7"
        style="@style/btnStyle"
        android:layout_width="0dp"
        android:layout_marginTop="280dp"
        android:text="btn7"
        app:layout_constraintEnd_toStartOf="@id/btn8"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        app:layout_constraintHorizontal_weight="2"
        android:id="@+id/btn8"
        style="@style/btnStyle"
        android:layout_width="0dp"
        android:text="btn8"
        app:layout_constraintBottom_toBottomOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btn9"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toTopOf="@+id/btn7" />

    <Button
        app:layout_constraintHorizontal_weight="3"
        android:id="@+id/btn9"
        style="@style/btnStyle"
        android:layout_width="0dp"
        android:text="btn9"
        app:layout_constraintBottom_toBottomOf="@+id/btn8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="@+id/btn8" />


    <Button

        android:id="@+id/btn10"
        style="@style/btnStyle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="380dp"
        android:text="btn1"
        app:layout_constraintEnd_toStartOf="@id/btn11"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn11"
        style="@style/btnStyle"
        android:layout_marginStart="8dp"
        android:text="btn2"
        app:layout_constraintBottom_toBottomOf="@+id/btn10"
        app:layout_constraintEnd_toStartOf="@id/btn12"
        app:layout_constraintStart_toEndOf="@+id/btn10"
        app:layout_constraintTop_toTopOf="@+id/btn10" />

    <Button
        android:id="@+id/btn12"
        style="@style/btnStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="btn3"
        app:layout_constraintBottom_toBottomOf="@+id/btn11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn11"
        app:layout_constraintTop_toTopOf="@+id/btn11" />

</androidx.constraintlayout.widget.ConstraintLayout>