<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_relative_positioning"
        style="@style/btnStyle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="相对位置"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/btn_circular_positioning"
        style="@style/btnStyle"
        android:layout_marginTop="8dp"
        android:text="环绕位置"
        app:layout_constraintEnd_toEndOf="@+id/btn_relative_positioning"
        app:layout_constraintStart_toStartOf="@+id/btn_relative_positioning"
        app:layout_constraintTop_toBottomOf="@+id/btn_relative_positioning" />

    <Button
        android:id="@+id/btn_percent"
        style="@style/btnStyle"
        android:layout_marginTop="8dp"
        android:text="比例"
        app:layout_constraintEnd_toEndOf="@+id/btn_relative_positioning"
        app:layout_constraintStart_toStartOf="@+id/btn_relative_positioning"
        app:layout_constraintTop_toBottomOf="@+id/btn_circular_positioning" />

    <Button
        android:id="@+id/btn_gone_margin"
        style="@style/btnStyle"
        android:layout_marginTop="8dp"
        android:text="不可见与间距"
        app:layout_constraintEnd_toEndOf="@+id/btn_relative_positioning"
        app:layout_constraintStart_toStartOf="@+id/btn_relative_positioning"
        app:layout_constraintTop_toBottomOf="@+id/btn_percent" />

    <Button
        android:id="@+id/btn_chain"
        style="@style/btnStyle"
        android:layout_marginTop="8dp"
        android:text="链条"
        app:layout_constraintEnd_toEndOf="@+id/btn_relative_positioning"
        app:layout_constraintStart_toStartOf="@+id/btn_relative_positioning"
        app:layout_constraintTop_toBottomOf="@+id/btn_gone_margin" />

    <Button
        android:id="@+id/btn_optimizer"
        style="@style/btnStyle"
        android:layout_marginTop="8dp"
        android:text="优化辅助"
        app:layout_constraintEnd_toEndOf="@+id/btn_relative_positioning"
        app:layout_constraintStart_toStartOf="@+id/btn_relative_positioning"
        app:layout_constraintTop_toBottomOf="@+id/btn_chain" />

    <Button
        android:id="@+id/btn_group"
        style="@style/btnStyle"
        android:layout_marginTop="8dp"
        android:text="组辅助"
        app:layout_constraintEnd_toEndOf="@+id/btn_relative_positioning"
        app:layout_constraintStart_toStartOf="@+id/btn_relative_positioning"
        app:layout_constraintTop_toBottomOf="@+id/btn_optimizer" />

    <Button
        android:id="@+id/btn_guide_line"
        style="@style/btnStyle"
        android:layout_marginTop="8dp"
        android:text="导航线辅助"
        app:layout_constraintEnd_toEndOf="@+id/btn_relative_positioning"
        app:layout_constraintStart_toStartOf="@+id/btn_relative_positioning"
        app:layout_constraintTop_toBottomOf="@+id/btn_group" />

    <Button
        android:id="@+id/btn_barrier"
        style="@style/btnStyle"
        android:layout_marginTop="8dp"
        android:text="屏障辅助"
        app:layout_constraintEnd_toEndOf="@+id/btn_relative_positioning"
        app:layout_constraintStart_toStartOf="@+id/btn_relative_positioning"
        app:layout_constraintTop_toBottomOf="@+id/btn_guide_line" />

    <Button
        android:id="@+id/btn_placeHolder"
        style="@style/btnStyle"
        android:layout_marginTop="8dp"
        android:text="占位"
        app:layout_constraintEnd_toEndOf="@+id/btn_relative_positioning"
        app:layout_constraintStart_toStartOf="@+id/btn_relative_positioning"
        app:layout_constraintTop_toBottomOf="@+id/btn_barrier" />

</androidx.constraintlayout.widget.ConstraintLayout>